config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Monitors
alias mon-laptop 2880x1800
alias mon-thunderbolt 2560x1440

# Moves
alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias lefthalf move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
alias righthalf move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
alias full-main ${full} 0

# Applications
alias hipchat 'HipChat'
alias slack 'Slack'
alias terminal 'iTerm'
alias spotify 'Spotify'
alias browser 'Google Chrome'
alias email 'Airmail'
alias git 'SourceTree'
alias things 'Things'
alias tasks 'OmniFocus'
alias pass '1Password'

# Layouts

## 3 Monitors (2 thunderbolt, 1 Macbook)
layout 3monitors ${hipchat} ${full} 2 # put hipchat on laptop
layout 3monitors ${slack} ${full} 2 # put slack on laptop
layout 3monitors ${spotify} ${full} 2
layout 3monitors ${terminal} ${full} 1 # put full screen on middle monitors
layout 3monitors ${browser} ${righthalf} 0
layout 3monitors ${email} ${lefthalf} 0
layout 3monitors ${git} ${lefthalf} 0
layout 3monitors ${things} ${lefthalf} 0
layout 2monitors ${tasks} ${lefthalf} 0

## 2 Monitors (2 thunderbolts)
layout 2monitors ${terminal} ${full} 1 # put full screen on right monitors
layout 2monitors ${browser} ${righthalf} 0
layout 2monitors ${hipchat} ${lefthalf} 0
layout 2monitors ${slack} ${lefthalf} 0
layout 2monitors ${spotify} ${lefthalf} 0
layout 2monitors ${tasks} ${lefthalf} 0

## 1 Monitor (Macbook)
layout 1monitors ${browser} ${full-main}
layout 1monitors ${terminal} ${full-main}
layout 1monitors ${spotify} ${full-main}
layout 1monitors ${hipchat} ${full-main}
layout 1monitors ${slack} ${full-main}
layout 1monitors ${things} ${full-main}
layout 1monitors ${git} ${full-main}
layout 1monitors ${tasks} ${full-main}

# Force Layouts
bind g:ctrl;alt;cmd layout 3monitors
bind f:ctrl;alt;cmd layout 2monitors
bind s:ctrl;alt;cmd layout 1monitors

# Layout Defaults
default 3monitors count:3
default 2monitors count:2

# Resize Bindings
bind right:alt       resize +10% +0
bind left:alt        resize -10% +0
bind up:alt          resize +0   -10%
bind down:alt        resize +0   +10%
bind right:ctrl;alt  resize -10% +0 bottom-right
bind left:ctrl;alt   resize +10% +0 bottom-right
bind up:ctrl;alt     resize +0   +10% bottom-right
bind down:ctrl;alt   resize +0   -10% bottom-right

# Push Bindings
bind right:alt;cmd  push right bar-resize:screenSizeX/2
bind left:alt;cmd   push left  bar-resize:screenSizeX/2
bind up:alt;cmd     push up    bar-resize:screenSizeY/2
bind down:alt;cmd   push down  bar-resize:screenSizeY/2
bind f:alt;cmd      push down  bar-resize:screenSizeX

# Nudge Bindings
bind right:shift;alt nudge +10% +0
bind left:shift;alt  nudge -10% +0
bind up:shift;alt    nudge +0   -10%
bind down:shift;alt  nudge +0   +10%

# Throw Bindings
bind 1:ctrl;alt         throw 0 resize
bind 2:ctrl;alt         throw 1 resize
bind 3:ctrl;alt         throw 2 resize
bind right:ctrl;alt;cmd throw right resize
bind left:ctrl;alt;cmd  throw left  resize
bind up:ctrl;alt;cmd    throw up    resize
bind down:ctrl;alt;cmd  throw down  resize

# Focus Bindings
# bind right:cmd    focus right
# bind left:cmd     focus left
# bind up:cmd       focus up
# bind down:cmd     focus down
# bind up:cmd;alt   focus behind
# bind down:cmd;alt focus behind

# Window Hints
bind esc:cmd hint
